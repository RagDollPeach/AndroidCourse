<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="my_buttons_style" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">@dimen/buttons_layout_width</item>
        <item name="android:layout_margin">@dimen/buttons_layout_margin</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/buttons_text_size</item>
        <item name="android:background">@drawable/digits_buttons_round</item>
    </style>

    <style name="my_text_view_style" parent="@style/Widget.Design.ScrimInsetsFrameLayout">
        <item name="android:layout_height">@dimen/text_view_layout_height</item>
        <item name="android:background">@drawable/text_frame</item>
        <item name="android:hint">@string/text_view_ru</item>
        <item name="android:inputType">none</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/edit_text_text_size</item>
    </style>

    <style name="my_buttons_theme_night" parent="Theme.MyCalculator">
            <item name="android:fontFamily">@font/amarante</item>
    </style>

</resources>