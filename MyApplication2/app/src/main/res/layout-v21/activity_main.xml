<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_primary"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50sp"
        android:fontFamily="@font/montserrat_bold"
        android:freezesText="false"
        android:gravity="center_horizontal"
        android:text="@string/logo"
        android:textAlignment="center"
        android:textColor="@color/textColorWhite"
        android:textSize="34sp"
        android:textStyle="bold"

        />

    <EditText
        android:id="@+id/user_field"
        android:layout_width="398dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="50sp"
        android:layout_marginTop="150sp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/hint_user_field"
        android:inputType="text"
        android:minHeight="48dp"
        android:textColor="@color/textColorWhite"
        android:textColorHint="@color/textColorHintPurple_200" />

    <Button
        android:id="@+id/main_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_field"
        android:layout_marginHorizontal="130sp"
        android:layout_marginTop="20sp"
        android:backgroundTint="@color/textColorButtonTeal_200"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/button_text"
        android:textColor="#546E7A" />

    <TextView
        android:id="@+id/result_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_btn"
        android:layout_marginTop="50sp"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/textColorWhite"
        android:textSize="25sp"
        android:textStyle="bold"

         />
</RelativeLayout>