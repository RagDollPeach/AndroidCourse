<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@drawable/round_note"
    android:padding="10dp">

    <TextView
        android:id="@+id/note_title_output"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="18sp"
        tools:text="Заголовок" />

    <TextView
        android:id="@+id/note_output"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/note_title_output"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        tools:text="Заметка" />

    <TextView
        android:id="@+id/note_time_output"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/note_output"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:gravity="end"
        android:textColor="@color/black"
        android:textSize="12sp"
        tools:text="Jan 22 2022" />

</RelativeLayout>